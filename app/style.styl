body
  background #bada55
  font-family Lato
  font-size 20px

h1, h2, h3
  margin 0
  padding 0
  font-weight 400

h1
  font-size 2rem

h2
  font-size 1.5rem
  font-weight 200

.code
  font-family 'Operator Mono'

.main
  padding: 30px 100px

section
  padding 20px
  background white
  border-bottom 1px solid black

p
  font-weight 200

.controlls
  margin-bottom 10px
  display flex
  justify-content space-between
  cursor pointer

.example
  margin 40px 0 0 0

.box
  background red
  margin 5px
  width 100px
  height 100px

// THE CASCADE
.the-cascade
  div.box
    background blue

  .box
    width 100px
    height 100px
    background green

// DISPLAY TYPES
.display--block
  .box
    display block

.display--inline
  .box
    display inline

.display--inline-block
  .box
    display inline-block


.display--flex
  display flex

